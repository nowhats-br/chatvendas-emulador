{
  "name": "chatvendas-electron",
  "version": "1.0.0",
  "description": "ChatVendas - Sistema de Vendas via WhatsApp",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dev-win": "set NODE_ENV=development && electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.chatvendas.app",
    "productName": "ChatVendas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../backend/**/*",
      "../dist/**/*",
      "!../backend/node_modules",
      "!../backend/data",
      "!../backend/sessions",
      "!../backend/uploads"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "!node_modules",
          "!data",
          "!sessions",
          "!uploads",
          "!.env"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron": "^28.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  }
}