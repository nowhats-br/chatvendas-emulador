{
  "name": "chatvendas-backend",
  "version": "1.0.0",
  "description": "Backend local para ChatVendas com integração Whaileys",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "predev": "call kill-port-3010.bat",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build needed for Node.js'",
    "migrate": "node src/database/migrate.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@adiwajshing/keyed-db": "^0.2.4",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "adm-zip": "^0.5.16",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.15.2",
    "pino": "^10.1.0",
    "qrcode": "^1.5.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "sudo-prompt": "^9.2.1",
    "uuid": "^9.0.1",
    "whaileys": "github:canove/whaileys#v6.4.7",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "nodemon": "^3.0.2",
    "vitest": "^4.0.18"
  },
  "nodemonConfig": {
    "ignore": [
      "data/**",
      "sessions/**",
      "uploads/**",
      "emulator-data/**",
      "android-dependencies/**",
      "logs/**",
      "*.db",
      "*.db-journal",
      "*.log"
    ],
    "delay": "2500"
  }
}
